{
	"name": "boxels",
	"description": "Una librería frontend diseñada para desarrollar aplicaciones web modernas del lado del cliente.",
	"type": "module",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"homepage": "https://github.com/kkokotero/boxels#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/kkokotero/boxels"
	},
	"bugs": {
		"url": "https://github.com/kkokotero/boxels/issues"
	},
	"main": "./dist/src/index.js",
	"module": "./dist/src/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/src/index.js",
			"require": "./dist/src/index.js",
			"types": "./dist/src/index.d.ts"
		},
		"./components": {
			"import": "./dist/src/components/index.js",
			"require": "./dist/src/components/index.js",
			"types": "./dist/src/components/index.d.ts"
		},
		"./core": {
			"import": "./dist/src/core/index.js",
			"require": "./dist/src/core/index.js",
			"types": "./dist/src/core/index.d.ts"
		},
		"./data": {
			"import": "./dist/src/data/index.js",
			"require": "./dist/src/data/index.js",
			"types": "./dist/src/data/index.d.ts"
		},
		"./dom": {
			"import": "./dist/src/dom/index.js",
			"require": "./dist/src/dom/index.js",
			"types": "./dist/src/dom/index.d.ts"
		},
		"./hooks": {
			"import": "./dist/src/hooks/index.js",
			"require": "./dist/src/hooks/index.js",
			"types": "./dist/src/hooks/index.d.ts"
		},
		"./jsx-runtime": {
			"import": "./dist/src/runtime/jsx-runtime.js",
			"require": "./dist/src/runtime/jsx-runtime.js",
			"types": "./dist/src/runtime/jsx-runtime.d.ts"
		},
		"./jsx-dev-runtime": {
			"import": "./dist/src/runtime/jsx-dev-runtime.js",
			"require": "./dist/src/runtime/jsx-dev-runtime.js",
			"types": "./dist/src/runtime/jsx-dev-runtime.d.ts"
		},
		"./testing": {
			"import": "./dist/src/testing/index.js",
			"require": "./dist/src/testing/index.js",
			"types": "./dist/src/testing/index.d.ts"
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*"
			]
		}
	},
	"files": [
		"dist/",
		"misc/",
		"README.md",
		"LICENSE.txt"
	],
	"scripts": {
		"dev": "vite serve",
		"build": "tsup",
		"clean": "rimraf dist",
		"check": "biome check src",
		"lint": "biome lint src",
		"typecheck": "tsc --noEmit",
		"test": "vitest run --coverage --reporter=verbose",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"prepublishOnly": "npm run lint && npm run test && npm run clean && npm run build && npm run typecheck",
		"postinstall": "echo 'Boxels installed.'",

		"release": "npm run prepublishOnly && npm publish",
		"release:patch": "npm version patch && npm run release",
		"release:minor": "npm version minor && npm run release",
		"release:major": "npm version major && npm run release"
	},
	"engines": {
		"node": ">=18"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/node": "^24.2.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "3.2.4",
		"dexie": "^4.0.11",
		"fast-equals": "^5.2.2",
		"happy-dom": "^18.0.1",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"vite": "^7.0.4",
		"vite-tsconfig-paths": "^6.0.0-beta.3",
		"vitest": "^3.2.4"
	},
	"browserslist": [
		"Chrome >=79",
		"ChromeAndroid >=79",
		"Firefox >=70",
		"Edge >=79",
		"Safari >=14",
		"iOS >=14"
	]
}
